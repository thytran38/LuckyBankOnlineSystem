<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="android:datePickerDialogTheme">@style/AppTheme.DialogTheme</item>
    </style>

    <style name="AppTheme.DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">#FFC62C</item>
        <item name="android:windowBackground">@color/black_LightMode</item>
        <item name="colorControlActivated">#FFC62C</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:textColorPrimaryInverse">@color/black_LightMode</item>
        <item name="android:textColorSecondaryInverse">@color/black_LightMode</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent2</item>
    </style>

    <style name="LOBS_DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/gray_dark_DarkMode</item>
        <item name="android:textColor">@color/gray_LightMode</item>
        <item name="android:fontFamily">Arial</item>


    </style>

    <style name="LOBS_LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white_LightMode</item>
        <item name="android:textColor">@color/gray_dark_DarkMode</item>
        <item name="android:fontFamily">Arial</item>


    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent2</item>
    </style>

</resources>